# Discord
DISCORD_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here
DISCORD_REDIRECT_URI=http://localhost:5173/auth/callback
DASHBOARD_URL=http://localhost:5173/dashboard

# Database 
# For PostgreSQL (NeonDB)
DATABASE_URL=postgresql+asyncpg://flake:flake_password@postgres:5432/flake_music
# For MySQL
MYSQL_DATABASE_URL=mysql+aiomysql://root:root_password@localhost:3306/flake_music
USE_NEON_DB=true
USE_MYSQL_DB=false

# Security
SECRET_KEY=super_secret_jwt_key

# Frontend
VITE_DISCORD_CLIENT_ID=your_client_id_here
VITE_API_URL=http://localhost:8000/api/v1
VITE_WS_URL=ws://localhost:8000/ws
VITE_DISCORD_REDIRECT_URI=http://localhost:5173/auth/callback

# Backend CORS (comma-separated origins allowed to make API requests)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# Lavalink Connection (Handles all the music processing)
LAVALINK_HOST=your_lavalink_host_here
LAVALINK_PORT=25566
LAVALINK_PASSWORD=your_lavalink_password_here

# Superuser Configuration (User IDs allowed to bypass all checks/use admin panels)
ADMIN_USER_ID=your_discord_user_id_here

# Superguild Configuration (Required primary support server/guild ID)
MOTHER_GUILD_ID=your_main_discord_server_id_here

# Discord Bot Status Messages (cycles through these)
BOT_STATUS_MESSAGE_1=Listening to your commands!
BOT_STATUS_MESSAGE_2=Ready to play music!
BOT_STATUS_MESSAGE_3=Type /play to start music!
BOT_STATUS_MESSAGE_4=Invite me to your server!
BOT_STATUS_ROTATION_SECONDS=5
BOT_VERSION=v4.1.0 
GITHUB_URL=https://github.com/sumanulto/Flake-Music.git

# Spotify (Required for importing Spotify playlists - get credentials at https://developer.spotify.com/dashboard)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Voice Module config (Speech recognition feature)
VOICE_MODULE_ENABLED=false
DISCORD_LISTENER_TOKEN=your_listener_bot_token_here
VITE_DISCORD_LISTENER_CLIENT_ID=your_listener_client_id_here
VOSK_MODEL_PATH=./backend/models/vosk-model-small-en-us-0.15
COMPANION_LOGS=true

# Custom Emojis Configuration
# Player controls
USE_CUSTOM_EMOJIS_PLAYER=false
EMOJI_PLAY=<:playbutton:1234567890>
EMOJI_PAUSE=<:pausebutton:1234567890>
EMOJI_STOP=<:stopbutton:1234567890>
EMOJI_NEXT=<:fastforwardbutton:1234567890>
EMOJI_PREV=<:fastbackward:1234567890>
EMOJI_VOL_UP=<:volumeup:1234567890>
EMOJI_VOL_DOWN=<:volumedown:1234567890>
EMOJI_LOOP_OFF=<:repeatnone:1234567890>
EMOJI_LOOP_ALL=<:repeatall:1234567890>
EMOJI_LOOP_ONE=<:repeatone:1234567890>
EMOJI_SHUFFLE=<:shuffle:1234567890>
EMOJI_LIKE=<:favourite:1234567890>

# Queue source icons
USE_CUSTOM_EMOJIS_ICON=false
EMOJI_YOUTUBE=<:youtube:1234567890>
EMOJI_SPOTIFY=<:spotify:1234567890>